{
  "name": "hydrogenmusic",
  "private": true,
  "version": "0.5.0",
  "main": "src/background.js",
  "author": {
    "name": "ghhccghk",
    "email": "2137610394@qq.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .html",
    "dist": "vite build && electron-builder -p always"
  },
  "dependencies": {
    "@neteaseapireborn/api": "^4.29.9",
    "axios": "^1.12.2",
    "base64-js": "^1.5.1",
    "dayjs": "^1.11.18",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "electron-win-state": "^1.1.22",
    "fs-extra": "^11.3.2",
    "howler": "^2.2.4",
    "js-cookie": "^3.0.5",
    "js-md5": "^0.8.3",
    "dbus-next": "^0.10.2",
    "mpris-service": "^2.1.2",
    "music-metadata": "^11.9.0",
    "nanoid": "^5.1.6",
    "normalize.css": "^8.0.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "plyr": "^3.8.3",
    "qrcode": "^1.5.4",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "vue-slider-component": "^4.1.0-beta.6",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "x11": "^2.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "sass": "^1.93.2",
    "terser": "^5.44.0",
    "vite": "^7.1.10",
    "vite-plugin-compression": "^0.5.1"
  },
  "build": {
    "productName": "Hydrogen Music",
    "appId": "com.hydrogenmusic.app",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "src/background.js",
      "desktop-lyric.html",
      "index.html",
      "dist/**/*",
      "src/assets/icon/**/*",
      "src/assets/fonts/**/*",
      "src/electron/**/*",
      "src/utils/**/*",
      "!**/.DS_Store",
      "!**/node_modules",
      "!release/**/*",
      "!dist-ssr/**/*",
      "!img/**/*"
    ],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "./src/assets/icon/icon.icns",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "./src/assets/icon/icon.ico",
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "category": "AudioVideo",
      "icon": "./src/assets/icon/icon.png"
    }
  }
}
