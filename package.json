{
  "name": "hydrogenmusic",
  "private": true,
  "version": "0.5.1",
  "main": "src/background.js",
  "homepage": "https://github.com/ghhccghk/Hydrogen-Music",
  "author": {
    "name": "ghhccghk",
    "email": "2137610394@qq.com"
  },
  "contributors": [
    {
      "name": "ldx123000",
      "email": "ldx123000@gmail.com",
      "url": "https://github.com/ldx123000"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghhccghk/Hydrogen-Music.git"
  },
  "bugs": {
    "url": "https://github.com/ghhccghk/Hydrogen-Music/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "license-checker \\\n  --json \\\n  --direct \\\n  --production \\\n  --showAuthor \\\n  --showRepository \\\n --relativeLicensePath > ./public/licenses.json && vite build ",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .html",
    "dist": "license-checker \\\n  --json \\\n  --direct \\\n  --production \\\n  --showAuthor \\\n  --showRepository \\\n --relativeLicensePath > ./public/licenses.json && vite build &&  electron-builder -p always"
  },
  "dependencies": {
    "@neteasecloudmusicapienhanced/api": "^4.29.9",
    "axios": "^1.2.0",
    "base64-js": "^1.5.1",
    "dayjs": "^1.11.6",
    "dbus-next": "^0.10.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "electron-win-state": "^1.1.22",
    "ffmpeg-static": "^5.2.0",
    "fs-extra": "^11.1.0",
    "howler": "^2.2.3",
    "js-cookie": "^3.0.1",
    "js-md5": "^0.7.3",
    "mpris-service": "^2.1.2",
    "music-metadata": "^7.13.0",
    "nanoid": "^3.3.4",
    "normalize.css": "^8.0.1",
    "pinia": "^2.0.23",
    "pinia-plugin-persistedstate": "^3.0.1",
    "plyr": "^3.7.3",
    "qrcode": "^1.5.1",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6",
    "vue-slider-component": "^4.1.0-beta.6",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "license-checker": "^25.0.1",
    "nodemon": "^3.1.10",
    "rollup": "^4.52.4",
    "sass": "^1.56.1",
    "terser": "^5.44.0",
    "vite": "^7.1.9",
    "vite-plugin-compression": "^0.5.1"
  },
  "build": {
    "productName": "Hydrogen Music",
    "appId": "com.hydrogenmusic.app",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "src/background.js",
      "desktop-lyric.html",
      "index.html",
      "dist/**/*",
      "src/assets/icon/**/*",
      "src/assets/fonts/**/*",
      "src/electron/**/*",
      "src/utils/**/*",
      "!**/.DS_Store",
      "!**/node_modules",
      "!release/**/*",
      "!dist-ssr/**/*",
      "!img/**/*"
    ],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "./src/assets/icon/icon.icns",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "./src/assets/icon/icon.ico",
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "category": "AudioVideo",
      "icon": "./src/assets/icon/icon.png"
    }
  }
}
